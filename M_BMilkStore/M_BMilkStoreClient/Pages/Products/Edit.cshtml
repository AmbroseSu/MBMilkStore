@page
@model M_BMilkStoreClient.Pages.Products.EditModel

@{
    ViewData["Title"] = "Edit Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/editProduct.css" />
</head>
<body>
    <h1 class="text-center my-5">Edit Product</h1>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Product Information</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Product.ProductId" />

                    <div class="form-group row">
                        <label asp-for="Product.Name" class="col-sm-3 col-form-label font-weight-bold"></label>
                        <div class="col-sm-9">
                            <input asp-for="Product.Name" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Product.Description" class="col-sm-3 col-form-label font-weight-bold"></label>
                        <div class="col-sm-9">
                            <textarea asp-for="Product.Description" class="form-control" rows="4" placeholder="Enter product description"></textarea>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Product.Price" class="col-sm-3 col-form-label font-weight-bold"></label>
                        <div class="col-sm-9">
                            <input asp-for="Product.Price" class="form-control" placeholder="Enter product price" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Product.Image" class="col-sm-3 col-form-label font-weight-bold"></label>
                        <div class="col-sm-9">
                            <img src="@Model.Product.Image" alt="Product Image" class="img-thumbnail mb-2" />
                            <input asp-for="Product.Image" class="form-control" placeholder="Enter image URL" />
                            <span asp-validation-for="Product.Image" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Product.Status" class="col-sm-3 col-form-label font-weight-bold"></label>
                        <div class="col-sm-9">
                            <input asp-for="Product.Status" class="form-control" placeholder="Enter product status" />
                            <span asp-validation-for="Product.Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Product.ProductBrandId" class="col-sm-3 col-form-label font-weight-bold"></label>
                        <div class="col-sm-9">
                            <select asp-for="Product.ProductBrandId" class="form-control">
                                <option value="">Select Brand</option>
                                @foreach (var item in ViewBag.ProductBrandId)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="Product.ProductBrandId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Product.ProductCategoryId" class="col-sm-3 col-form-label font-weight-bold"></label>
                        <div class="col-sm-9">
                            <select asp-for="Product.ProductCategoryId" class="form-control">
                                <option value="">Select Category</option>
                                @foreach (var item in ViewBag.ProductCategoryId)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                            <span asp-validation-for="Product.ProductCategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
