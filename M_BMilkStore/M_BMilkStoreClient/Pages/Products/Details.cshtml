@page
@model M_BMilkStoreClient.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Product Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/detailProduct.css" />
</head>
<body>
    <h1 class="text-center my-5">Product Details</h1>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Product Information</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.Name)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Product.Name)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.Description)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Product.Description)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.Price)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Product.Price)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.Image)
                    </dt>
                    <dd class="col-sm-9">
                        <img src="@Model.Product.Image" alt="Product Image" class="img-thumbnail" />
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.ProductBrand)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Product.ProductBrand.Name)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.ProductCategory)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Product.ProductCategory.Name)
                    </dd>
                </dl>
            </div>
                    <div class="card-body">
                        <h4 class="card-title">Create Product Line</h4>
                        <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="ProductLine.Quantity" class="control-label"></label>
                                <input asp-for="ProductLine.Quantity" class="form-control" />
                                <span asp-validation-for="ProductLine.Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProductLine.ExpiredDate" class="control-label"></label>
                                <input asp-for="ProductLine.ExpiredDate" class="form-control" />
                                <span asp-validation-for="ProductLine.ExpiredDate" class="text-danger"></span>
                            </div>
@*                             <div class="form-group">
                                <label asp-for="ProductLine.ProductId" class="control-label"></label>
                                <select asp-for="ProductLine.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                            </div> *@
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                    </div>
            <div class="card-body">
                <h4 class="card-title">Product Lines</h4>
                <table class="table">
                    @if (!string.IsNullOrEmpty(Model.MessageError))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.MessageError
                        </div>
                    }
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductLines[0].Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductLines[0].ExpiredDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductLines[0].Product)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductLines)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExpiredDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Product.Name)
                                </td>
                                <td>
                                    <a asp-page="/ManagementProductLine/Delete" asp-route-id="@item.ProductLineId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-center">
                <a asp-page="./Edit" asp-route-id="@Model.Product.ProductId" class="btn btn-primary">Edit</a>
                <a asp-page="./Index" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </div>
    </div>
</body>
</html>
