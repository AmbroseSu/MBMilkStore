@page
@model M_BMilkStoreClient.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/deleteProduct.css" rel="stylesheet" asp-append-version="true">
</head>
<body>
    <h1 class="text-center my-5">Delete Product</h1>

    <h3 class="text-center text-danger">Are you sure you want to delete this product?</h3>

    <div class="container">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Product Information</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.Name)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Product.Name)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.Description)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Product.Description)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.Price)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Product.Price)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.Image)
                    </dt>
                    <dd class="col-sm-9">
                        <img src="@Model.Product.Image" alt="Product Image" class="img-thumbnail" />
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.ProductBrand)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Product.ProductBrand.Name)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Product.ProductCategory)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Product.ProductCategory.Name)
                    </dd>
                </dl>
            </div>
            <div class="card-footer text-center">
                <form method="post" class="d-inline">
                    <input type="hidden" asp-for="Product.ProductId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
                <a asp-page="./Index" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
