@page
@model M_BMilkStoreClient.Pages.ManagementVoucher.EditModel

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h4>Edit Voucher</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Voucher.VoucherId" />
                    <div class="form-group row">
                        <label asp-for="Voucher.VoucherName" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Voucher.VoucherName" class="form-control" required />
                            <span asp-validation-for="Voucher.VoucherName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Voucher.VoucherValue" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Voucher.VoucherValue" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="Voucher.VoucherValue" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Voucher.MinimumPrice" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Voucher.MinimumPrice" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="Voucher.MinimumPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Voucher.CreationDate" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Voucher.CreationDate" class="form-control" type="date" required />
                            <span asp-validation-for="Voucher.CreationDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Voucher.ExpiryDate" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Voucher.ExpiryDate" class="form-control" type="date" required />
                            <span asp-validation-for="Voucher.ExpiryDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-page="/ManagementVoucher/Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>