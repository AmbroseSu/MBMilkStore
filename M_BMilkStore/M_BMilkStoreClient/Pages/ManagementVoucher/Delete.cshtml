@page
@model M_BMilkStoreClient.Pages.ManagementVoucher.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Voucher</h1>

<div class="alert alert-warning" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this voucher?</h4>
    <hr>
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Voucher.VoucherName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Voucher.VoucherName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Voucher.VoucherValue)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Voucher.VoucherValue)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Voucher.MinimumPrice)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Voucher.MinimumPrice)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Voucher.CreationDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Voucher.CreationDate)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Voucher.ExpiryDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Voucher.ExpiryDate)
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Voucher.VoucherId" />
    <div class="form-group">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</form>
