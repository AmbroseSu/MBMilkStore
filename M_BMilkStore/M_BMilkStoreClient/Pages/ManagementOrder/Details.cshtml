@page
@model M_BMilkStoreClient.Pages.ManagementOrder.DetailsModel

@{
    ViewData["Title"] = "Order Details";
}

<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                        <h5 class="text-muted mb-0">Order Details</h5>
                    </div>
                    <div class="card-body p-4">
                        <dl class="row mb-4">
                            <dt class="col-sm-4 fw-normal text-muted">@Html.DisplayNameFor(model => model.Order.OrderDate)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Order.OrderDate)</dd>

                            <dt class="col-sm-4 fw-normal text-muted">@Html.DisplayNameFor(model => model.Order.Status)</dt>
                            <dd class="col-sm-8">
                                @if (Model.Order.Status)
                                {
                                    <span class="badge bg-success">Finish</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                            </dd>

                            <dt class="col-sm-4 fw-normal text-muted">@Html.DisplayNameFor(model => model.Order.OrderTotalAmount)</dt>
                            <dd class="col-sm-8">$@Html.DisplayFor(model => model.Order.OrderTotalAmount)</dd>

                            <dt class="col-sm-4 fw-normal text-muted">@Html.DisplayNameFor(model => model.Order.User.Email)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Order.User.Email)</dd>

                            <dt class="col-sm-4 fw-normal text-muted">@Html.DisplayNameFor(model => model.Order.Voucher.VoucherName)</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Order.Voucher.VoucherName)</dd>
                        </dl>

                        <div class="card shadow-0 border mb-4">
                            <div class="card-body">
                                <h5 class="text-muted mb-3">Order Items</h5>
                                @foreach (var item in Model.Order.ListOrderDetail)
                                {
                                    <div class="row mb-3">
                                        <div class="col-md-2">
                                            <img src="@item.Product.Image" class="img-fluid" alt="@item.Product.Name">
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0">@item.Product?.Name</p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">Qty: @item.ProductQuantity</p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">$@item.ProductPrice</p>
                                        </div>
                                    </div>
                                    <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between pt-2">
                            <p class="fw-bold mb-0">Order Summary</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> $@Model.Order.OrderTotalAmount</p>
                        </div>
                    </div>
                    <div class="card-footer border-0 px-4 py-5" style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total paid: <span class="h2 mb-0 ms-2">$@Model.Order.OrderTotalAmount</span></h5>
                    </div>
                </div>
                <div class="mt-3 text-end">
                    <a asp-page="./Edit" asp-route-id="@Model.Order.OrderId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</section>
