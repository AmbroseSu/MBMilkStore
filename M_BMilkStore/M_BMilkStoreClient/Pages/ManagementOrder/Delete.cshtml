@page
@model M_BMilkStoreClient.Pages.ManagementOrder.DeleteModel

@{
    ViewData["Title"] = "Delete Order";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h4>Delete Order</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Order.OrderId" />
                    <div class="form-group row">
                        <label asp-for="Order.OrderDate" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Order.OrderDate" class="form-control" readonly />
                            <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Order.Status" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="Order.Status" class="form-control">
                                <option value="false" selected="@(Model.Order.Status == false)">Pending</option>
                                <option value="true" selected="@(Model.Order.Status == true)">Finish</option>
                            </select>
                            <span asp-validation-for="Order.Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Order.OrderTotalAmount" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Order.OrderTotalAmount" class="form-control" type="number" readonly />
                            <span asp-validation-for="Order.OrderTotalAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Order.User.Email" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Order.User.Email" class="form-control" readonly />
                            <span asp-validation-for="Order.User.Email" class="text-danger"></span>
                        </div>
                    </div>
                    @if (Model.Order.VoucherId != null)
                    {
                        <div class="form-group row">
                            <label asp-for="Order.Voucher.VoucherName" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Order.Voucher.VoucherName" class="form-control" readonly />
                                <span asp-validation-for="Order.Voucher.VoucherName" class="text-danger"></span>
                            </div>
                        </div>
                    }
                    <div class="text-right">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-page="/ManagementOrder/Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
