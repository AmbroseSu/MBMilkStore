@page
@model M_BMilkStoreClient.Pages.Admin.DeleteUserModel
@{
    ViewData["Title"] = "Delete Account";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this account?</h3>

<div>
    <input type="hidden" asp-for="User.UserId" />
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            LastName
        </dt>
        <dd class="col-sm-10">
            @Model.User.LastName
        </dd>
        
        <dt class="col-sm-2">
            FirstName
        </dt>
        <dd class="col-sm-10">
            @Model.User.FirstName
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.User.Address
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.User.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.User.Email
        </dd>
        <dt class="col-sm-2">
            Password
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.User.Password))
            {
                <span>***********</span>
            }
        </dd>
        <dt class="col-sm-2">
            PhoneNumber
        </dt>
        <dd class="col-sm-10">
            @Model.User.PhoneNumber
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="User.UserId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Admin/AdminPage" class="btn btn-secondary">Cancel</a>
</form>
