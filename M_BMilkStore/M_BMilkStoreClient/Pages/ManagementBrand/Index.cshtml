@page
@model M_BMilkStoreClient.Pages.ManagementBrand.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    @if (!string.IsNullOrEmpty(Model.MessageError))
    {
        <div class="alert alert-danger" role="alert">
            @Model.MessageError
        </div>
    }
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductBrand[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.ProductBrand != null)
        {
            @foreach (var item in Model.ProductBrand)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ProductBrandId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ProductBrandId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ProductBrandId">Delete</a>
                    </td>
                </tr>
            }

        }
        else
        {
            <p>No results found for your list product brand.</p>
        }


    </tbody>
</table>
