<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ProductLine</h4>
    <hr />
    @if (!string.IsNullOrEmpty(Model.MessageError))
    {
        <div class="alert alert-danger" role="alert">
            @Model.MessageError
        </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductLine.QuantityIn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductLine.QuantityIn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductLine.ExpiredDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductLine.ExpiredDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductLine.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductLine.Product.Description)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ProductLine.ProductLineId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Products/Index">Back to List</a>
    </form>
